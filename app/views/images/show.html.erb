<% content_for :title do %>
  <h1><%= link_to "My Images", user_images_path %></h1>
  &rarr;
  <%= @image.image.name %>
<% end %>

<div class="show-image" data-image-id="<%= @image.id %>">
  <div class="image-container">
    <%= render "image", image: @image %>
  </div>

  <%= render "info", image: @image %>
</div>
