<li class="image-tag"
    id="tag-<%= tag %>"
    data-controller="tag">
    <span data-target="tag.name"><%= tag %></span>
    <%= link_to "&times;".html_safe,
      user_image_tag_path(@image, tag),
      method: :delete,
      data: { action: "click->tag#delete" },
      class: "delete-tag" %>
</li>
