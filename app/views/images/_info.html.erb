<div class="image-info">
  <div class="image-tags" data-controller="tags">
    <%= render "tags/tags", image: image, tags: image.tags %>

    <div class="new-tag-form">
      <%= form_tag(
        image_tags_path(image),
        method: :post,
        data: {"turbo-frame": "tags"}
      ) do %>
        <%= text_field_tag :tag, nil %>
        <%= submit_tag "Add Tag" %>
      <% end %>
    </div>
  </div>
</div>
